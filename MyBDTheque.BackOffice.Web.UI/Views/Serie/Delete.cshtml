@model MyBDTheque.Core.Data.Serie

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Etes-vous sûr de vouloir supprimer cette série ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titre)
        </dd>
    </dl>
    
    <div class="row">
        <div class="col-auto">
            <form asp-action="Delete" asp-route-tout="false">
                <input type="submit" value="Supprimer" class="btn btn-danger" />
            </form>
        </div>
        <div class="col-auto">
            <form asp-action="Delete" asp-route-tout="true">
                <input type="submit" value="Supprimer tout" class="btn btn-danger" />
            </form>
        </div>
        <div class="col-auto">
            <a asp-action="Index">Retour à la liste</a>
        </div>
    </div>
</div>
