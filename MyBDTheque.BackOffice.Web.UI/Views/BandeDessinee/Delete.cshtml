@model MyBDTheque.Core.Data.BandeDessinee

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Etes-vous sûr de vouloir supprimer cette bande dessinée ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Titre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Titre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateParution)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateParution)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Serie)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.Serie != null)
            {
                @Html.DisplayFor(model => model.Serie.Titre)
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Retour à la liste</a>
    </form>
</div>
